public class CalculoRetangulo {
    public static void main(String[] args) {
        // Declarando variáveis para base e altura
        double base = 10.5; // Exemplo de valor
        double altura = 5.0; // Exemplo de valor

        // Calculando a área
        double area = base * altura;

        // Calculando o perímetro
        double perimetro = 2 * (base + altura);

        // Exibindo os resultados no console
        System.out.println("A área do retângulo é: " + area);
        System.out.println("O perímetro do retângulo é: " + perimetro);
    }
}


public class ComparacaoIdades {
    public static void main(String[] args) {
        // Declarando variáveis para as idades
        int idadePessoa1 = 30; // Exemplo de idade
        int idadePessoa2 = 25; // Exemplo de idade

        // Comparando as idades
        boolean primeiraPessoaMaisVelha = idadePessoa1 > idadePessoa2;

        // Exibindo o resultado no console
        System.out.println("A primeira pessoa é mais velha: " + primeiraPessoaMaisVelha);
    }
}
